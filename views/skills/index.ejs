<body>
  <%-include('../partials/navbar.ejs') %>
  <div class="main">
    <h1>Skills</h1>
    <a href="/skills/new"> Add new Skill</a>

    <ul>
      <% skills.forEach((s) => { %>
      <li>
        <form
          action="/skills/<%= s.id %>?_method=DELETE"
          method="POST"
          class="delete-form"
        >
          <button type="submit">Delete</button>
        </form>
        <a href="/skills/<%= s.id %>"><%= s.name %></a>
        - <%= s.completed ? 'Complete' : 'Incomplete' %>
      </li>

      <% }); %>
    </ul>

    <p>Skills as of <%=time %></p>
  </div>

  <%-include('../partials/footer.ejs') %>
</body>
